<?xml version="1.0" encoding="utf-8"?><!-- Created by Andréa Fonsêca on 2024, see LICENSE file for details.-->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <Button
            android:id="@+id/btnChoose"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            android:text="@string/btn_choose_driver" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvDriverName"
                style="@style/highlight_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome motorista"
                android:textAppearance="@style/highlight_txt" />

            <TextView
                android:id="@+id/tvDriverDescription"
                style="@style/body_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descrição"
                android:textAppearance="@style/body_txt" />

            <TextView
                android:id="@+id/tvVehicleDetails"
                style="@style/body_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Veículo"
                android:textAppearance="@style/body_txt" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:orientation="horizontal"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvNote"
                    style="@style/body_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="3"
                    android:textAlignment="center"
                    android:textAppearance="@style/body_txt" />

                <TextView
                    android:id="@+id/tvRating"
                    style="@style/body_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Avaliação"
                    android:textAlignment="center"
                    android:textAppearance="@style/body_txt" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvTripCost"
                style="@style/highlight_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="R$ 50,00"
                android:textAppearance="@style/highlight_txt" />

            <Button
                android:id="@+id/btnChoose2"
                style="@style/Button_Custom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="10dp"
                android:text="@string/btn_choose_driver" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>